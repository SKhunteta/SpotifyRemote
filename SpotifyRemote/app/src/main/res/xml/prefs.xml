<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="@string/pref_user_key"
        android:title="@string/pref_user_title"
        android:defaultValue="@string/pref_user_default"/>
    <ListPreference
        android:key="@string/pref_results_limit_key"
        android:title="@string/pref_results_limit_title"
        android:summary="%s"
        android:dialogTitle="@string/pref_results_limit_title"
        android:entries="@array/pref_results_limit_entries"
        android:entryValues="@array/pref_results_limit_values"
        android:defaultValue="@string/pref_results_limit_default" />
</PreferenceScreen>